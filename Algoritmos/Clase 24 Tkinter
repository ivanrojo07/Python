# -*- coding: cp1252 -*-
from Tkinter import * # O puede ser import Tkinter.

##root = Tk() # root es un objeto de la clase Tk() de la clase gráfica.
##root.title("Aprendiendo Tkinter")
##w = Label(root, text = "¡Hola mundo!") # Llama al método Label y construimos una etiqueta.
##w.pack() # Físicamente significa que metamos lo que tenga w.
##root.mainloop() # Se pone un while, es decir, el programa se cierra hasta que el usuario hace algo en la ventana.

class App:
    def __init__(self, master):
        frame = Frame(master)
        frame.pack()
        self.button = Button(
            frame, text = "QUIT", fg = "red",
            command = frame.quit)
        self.button.pack(side = LEFT)
        self.hi_there = Button(frame, text = "Hola",
                               command = self.say_hi)
        self.hi_there.pack(side = LEFT)
        self.mi_boton = Button(frame, text = "Segundo botón", command = self.otro_mensaje)
        self.mi_boton.pack(side = LEFT)
    def say_hi(self):
        print "Hola mundo!"
    def otro_mensaje(self):
        print "Soy Megaman"
        
root = Tk()
app = App(root)
root.mainloop()
root.destroy()
